<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/no_network_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <ImageView
        android:id="@+id/no_network_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/no_network_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="15dp"
        android:text="@string/view_no_network"
        android:textColor="@color/tw_ui_theme_color_main"
        android:textSize="13sp" />

    <Button
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:background="@drawable/bg_btn_login_red"
        android:text="重新加载"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="16sp" />

</LinearLayout>